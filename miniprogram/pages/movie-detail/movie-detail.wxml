<!--miniprogram/pages/movie-detail/movie-detail.wxml-->
<view class="movie-detail-container">
<image class="movie-poster" src="{{movieDetailData.images.large}}"></image>
<view class="movie-info">
<text class="movie-title">片名: {{movieDetailData.original_title}}</text>
<text class="movie-level">评分: {{movieDetailData.rating.average}}</text>
<text class="">导演: {{movieDetailData.directors[0].name}}</text>
<text>主演: {{movieDetailData.casts[1].name}}{{movieDetailData.casts[2].name}}</text>
</view>
<button class="i-want-watch-movie">我要观影</button>
</view>
